<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fast.wq.com.fastandroid.MainActivity">

    <TextView
        android:id="@+id/total_zapya"
        android:text="@string/zapya_bean_total_format"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <fast.wq.com.fastandroid.view.DynamicView
        android:id="@+id/mdynamicView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></fast.wq.com.fastandroid.view.DynamicView>

    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/lineargradient"
        android:layout_width="wrap_content"
        android:layout_height="250px">
        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
           />
    </LinearLayout>


    <fast.wq.com.fastandroid.view.TaskLinerLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eaeced"></fast.wq.com.fastandroid.view.TaskLinerLayout>
</RelativeLayout>
